<div class="container">
  <div class="row">
    <h1 class="text-center">DojoForum</h1>

    <div class="col-md-12">
      <ul class="nav nav-pills nav-pills-center" style="margin-top:25px;">
        <li role="presentation" class="active"><%= link_to "All", root_path %></li>
        <% @categories.each do |category| %>
          <li role="presentation">
            <%= link_to category.name, category_path(category) %>
          </li>
        <% end %>
      </ul>

      <table class="table" style="margin-top:16px;">
        <thead>
          <tr>
            <th>Replies count</th>
            <th>Title</th>
            <th>Last replied at</th>
            <th>Viewed count</th>
          </tr>
        </thead> 

        <tbody>
          <% @posts.each do |post| %>
            <% if current_user %>
              <% if post.status == true %>
                <% if current_user.admin? || current_user == post.user || post.authority == "All" || post.authority == "Friend" %>
                  <tr>
                    <td></td>
                    <td><%= link_to post.title, post_path(post) %></td>
                    <td></td>
                    <td></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <div class="text-center">
        <%= paginate @posts %>
      </div> 
                 
    </div>
  </div>
</div>
