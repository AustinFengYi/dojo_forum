<div class="container">    
    <div class="col-md-12">
      <div class="feed-board">
        <table class="text-center feed-table">
          <tbody>
            <tr>
              <td>User</td>
              <td>Post</td>
              <td>Comment</td>
            </tr>
            <tr>
              <td><span class="label label-warning" style="padding:8px 25px;"><%= @users.count %></span></td>
              <td><span class="label label-warning" style="padding:8px 25px;"><%= @posts.count %></span></td>
              <td><span class="label label-warning" style="padding:8px 25px;"><%= @replies.count %></span></td>
            </tr>
          </tbody>
        </table>
      </div>

      <br><br><br>

      <div>
        <div class="col-md-6">
          <div class="hot-title text-center">Chatterbox</div>
          <hr>
          <table style="margin-top: 25px;">
            <tbody>
              <% i = 1 %>
              <% @hot_users.each do |user| %>
                <tr style="font-size: 16px;">
                  <td class="pull-right" style="margin-right: 10px;"><%= i %>.</td>
                  <td><%= link_to user.name, root_path %></td>
                  <td style="padding-left: 20px;"><%= user.user_replies_count %></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col-md-6">
          <div class="hot-title text-center">Most Popular Post</div>
          <hr>
          <table style="margin-top: 25px;">
            <tbody>
              <% i = 1 %>
              <% @hot_posts.each do |post| %>
                <tr style="font-size: 16px;">
                  <td class="pull-right" style="margin-right: 10px;"><%= i %>.</td>
                  <td><%= link_to truncate(post.title , length:50 ), post_path(post) %></td>
                  <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      
    </div>
  
</div>