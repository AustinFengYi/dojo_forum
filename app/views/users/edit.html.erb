<style>
  .error-box{
    border: 1px solid #ddd;
    padding: 10px;
    margin-bottom: 15px;
  }
</style>

<div class="container">
  <div class="col-md-8 col-md-offset-2" style="margin-top: 40px;">   
    <% if @user.errors.any? %>
      <div class="error-box">
        <h4>We have some errors here !</h4>
        <ol>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ol>
      </div>        
    <% end %>

    <%= form_for @user,method: :put do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name", class: "edit-title" %>
        <%= f.text_field :name, class: "form-control" %>
      </div><br>

      <div class="form-group">
        <%= f.label :introduction, "Introduction" %>
        <%= f.text_area :introduction,rows:"5", class: "form-control" %>
      </div><br>

      <div class="form-group">
        <%= f.label :avatar, "Avatar" %><br>
        <%= image_tag @user.avatar.url, width: '150px' if @user.avatar? %><br>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to 'Cancel', user_path(@user), class: "btn btn-danger" %>
      </div>
    <% end %>
  
  </div>
</div>
